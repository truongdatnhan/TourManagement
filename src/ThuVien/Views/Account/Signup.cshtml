@using Domain.Entities 
@model Application.DTOs.SignUpDTO

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container">
    <h3 class="display-4">Đăng ký tài khoản</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Signup">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="HoNV" class="control-label"></label>
                    <input asp-for="HoNV" class="form-control" />
                    <span asp-validation-for="HoNV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TenNV" class="control-label"></label>
                    <input asp-for="TenNV" class="form-control" />
                    <span asp-validation-for="TenNV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DoBNV" class="control-label"></label>
                    <input asp-for="DoBNV" class="form-control" />
                    <span asp-validation-for="DoBNV" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ComfirmPassword" class="control-label"></label>
                    <input asp-for="ComfirmPassword" class="form-control" />
                    <span asp-validation-for="ComfirmPassword" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">
                        <option value="">Vui lòng chọn...</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <input type="hidden" asp-for="Role" value="1" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign Up" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <img src="~/img/signup.png" class="img-fluid" />
        </div>
    </div>
</div>